{
  "compilerOptions": {
    "declaration": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./dist",
    "target": "ES2022",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": [],
    "paths": {
      "~/*": [
        "*"
      ]
    }
  },
  "exclude": [
    "dist/*",
    "build/*",
    "node_modules/*",
  ]
}
